<h1 class="title">Products</h1>
<div class="columns is-variable is-1-mobile is-0-tablet is-3-desktop is-8-widescreen is-2-fullhd">
  
    <div class="column">  </div>
    <div class="column">  </div>
    <div class="column">
      <%= link_to '<i class="fas fa-plus"></i> New Product'.html_safe, new_product_path, class: 'button is-success is-outlined' %>
    </div>
  
</div>
<hr>
<table class="table is-fullwidth">
  <thead class="thead"> 
    <tr>
      <th> </th>
      <th>Title</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Value</th>
      <th>Availability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <% if product.image.present? %>
             <%= image_tag "#{product.image}", class: 'img-min' %>
          <% else %>
              <%= image_tag "products/no_found.png", class: 'img-min' %>
          <% end %>
        </td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.value %></td>
        <td><%= product.availability ? '<label class= "tag is-success"> Yes </label>'.html_safe :  '<label class= "tag is-danger"> No </label>'.html_safe %></td>
        <td><%= link_to '<i class="fas fa-info-circle"></i>'.html_safe, product, class: 'button is-info', title: 'Show' %></td>
        <td><%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_product_path(product), class: 'button is-warning', title: 'Edit' %></td>
        <td><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger', title: 'Destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


